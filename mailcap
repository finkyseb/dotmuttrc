#text/html;                      firefox %s ;
text/html;                      ~/.mutt/view_attachment.sh %s html
#text/html;                      elinks %s; nametemplate=%s.html
#text/html;                      elinks -dump %s; nametemplate=%s.html; copiousoutput

# Images
image/jpg; ~/.mutt/view_attachment.sh %s jpg
image/jpeg; ~/.mutt/view_attachment.sh %s jpg
image/pjpeg; ~/.mutt/view_attachment.sh %s jpg
image/png; ~/.mutt/view_attachment.sh %s png
image/gif; ~/.mutt/view_attachment.sh %s gif
image/tiff; ~/.mutt/view_attachment.sh %s gif

# PDF
application/pdf; ~/.mutt/view_attachment.sh %s pdf
application/x-latex; ~/.mutt/view_attachment.sh %s pdf

# Unidentified.
application/octet-stream; ~/.mutt/view_attachment.sh %s "-" 

# MS Excel
application/x-msexcel; ~/.mutt/view_attachment.sh %s xls
application/ms-exc; ~/.mutt/view_attachment.sh %s xls
application/excel; ~/.mutt/view_attachment.sh %s xls
application/msexcel; ~/.mutt/view_attachment.sh %s xls
application/vnd.ms-exc; ~/.mutt/view_attachment.sh %s xls
application/vnd.ms-excel; ~/.mutt/view_attachment.sh %s xls
application/vnd.openxmlformats-officedocument.spreadsheetml.sheet; ~/.mutt/view_attachment.sh %s xlsx

# MS Word
application/msword; ~/.mutt/view_attachment.sh %s doc
application/vnd.openxmlformats-officedocument.wordprocessingml.document; ~/.mutt/view_attachment.sh %s doc

# LibreOffice
application/vnd.oasis.opendocument.spreadsheet; ~/.mutt/view_attachment.sh %s ods
application/vnd.oasis.opendocument.text; ~/.mutt/view_attachment.sh %s odt
